<UserControl x:Class="Bimbrownik_Desktop.Controls.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Bimbrownik_Desktop.Controls">

    <Grid Margin="5">
        <Button Content="{Binding Label,
                          RelativeSource={RelativeSource AncestorType={x:Type local:ButtonControl}}}"
                Height="50" Width="300"
                Background="LightGray"
                BorderBrush="Gray"
                BorderThickness="1"
                FontSize="16"
                Click="Button_Click"/>
    </Grid>
</UserControl>