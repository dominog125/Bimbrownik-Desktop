<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="RecipeIconButton" TargetType="Button">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource GrayButtonBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryOrange}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

</ResourceDictionary>