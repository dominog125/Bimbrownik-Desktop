<Window x:Class="Bimbrownik_Desktop.Views.Notifications.AddNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddNotificationTitle}"
        Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource NotificationMessage}"
                   FontWeight="Bold"
                   Grid.Row="0" Margin="0,0,0,5"/>

        <TextBox x:Name="MessageInput"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Grid.Row="1"
                 Height="100"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="{DynamicResource Save}" Width="100" Height="40" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="{DynamicResource Cancel}" Width="100" Height="40" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>