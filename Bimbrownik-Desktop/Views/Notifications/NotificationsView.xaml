<UserControl x:Class="Bimbrownik_Desktop.Views.Notifications.NotificationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Bimbrownik_Desktop.Controls">
    <DockPanel Background="White">

        <Border Background="#D0D0D0" Height="60" Padding="10" DockPanel.Dock="Top">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{DynamicResource NotificationsTitle}"
                           FontSize="26" FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"/>
                <controls:LanguageToggle Width="32" Height="32"
                                         VerticalAlignment="Center"
                                         DockPanel.Dock="Right"/>
            </DockPanel>
        </Border>

        <StackPanel Margin="20">
            <Button Content="{DynamicResource AddNotification}"
                    Width="200" Height="40"
                    HorizontalAlignment="Center"
                    Click="AddNotification_Click"
                    Margin="0,0,0,20"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="NotificationList" />
            </ScrollViewer>
        </StackPanel>
    </DockPanel>
</UserControl>